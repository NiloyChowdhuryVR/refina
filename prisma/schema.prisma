generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) // Unique user ID
  clerkId   String   @unique              // Clerk's user id
  name      String?
  email     String?  @unique
  images    Image[]  // relation: one user -> many images
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String   // foreign key (connects to User.id)
  
  type        ImageType // uploaded or generated
  url         String    // URL of stored image (UploadThing/S3/etc.)
  
  createdAt   DateTime  @default(now())
  expiresAt   DateTime? // generated images auto-delete after 1 hr
}

enum ImageType {
  UPLOADED
  GENERATED
}